{
  "name": "boilerplate-typescript",
  "version": "1.0.0",
  "description": "Base project for typescript",
  "main": "dist/server/index.js",
  "scripts": {
    "prod": "node dist/server/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon",
    "dev:debug": "nodemon --exec \"node -r ts-node/register -r dotenv/config --inspect-brk\" server/index.ts",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "mocha -r dotenv/config -r ts-node/register test/**/*.ts --exit",
    "test:debug": "mocha -r ts-node/register --inspect-brk test/**/*.ts --exit",
    "test-coverage": "nyc npm run test --reporter lcov report",
    "clean": "rimraf dist"
  },
  "author": "Ismael Leiva",
  "dependencies": {
    "body-parser": "^1.19.0",
    "common-clases": "^1.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "got": "^11.8.2",
    "joi": "^17.4.0",
    "method-override": "^3.0.0",
    "redis": "^3.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/redis": "^2.8.28",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "supertest": "^6.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
